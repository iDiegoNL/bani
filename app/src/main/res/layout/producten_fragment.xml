<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".producten.ProductenFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="50dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.diegor.bani.BaseActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="com.diegor.bani.BaseActivity">

            <Button
                android:id="@+id/GnF"
                android:layout_width="169dp"
                android:layout_height="130dp"
                android:background="@drawable/aardappelen_groente_fruit" />

            <Button
                android:id="@+id/Alcohol"
                android:layout_width="169dp"
                android:layout_height="130dp"
                android:background="@drawable/bier_sterke_drank" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="com.diegor.bani.BaseActivity">

            <Button
                android:id="@+id/Zuivel"
                android:layout_width="169dp"
                android:layout_height="130dp"
                android:background="@drawable/boter_eieren_zuivel" />

            <Button
                android:id="@+id/GeenAlcohol"
                android:layout_width="169dp"
                android:layout_height="130dp"
                android:background="@drawable/frisdrank_koffie_thee_sappen" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>