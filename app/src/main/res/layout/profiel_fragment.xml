<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    tools:context=".profiel.ProfielFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="50dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.diegor.bani.BaseActivity">


        <ImageView
            android:id="@+id/photo"
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:focusable="auto"
            android:src="@drawable/account_circle"
            android:contentDescription="TODO" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.diegor.bani.BaseActivity">

        <TextView
            android:id="@+id/name"
            android:layout_width="358dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Naam" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="com.diegor.bani.BaseActivity">


            <EditText
                android:id="@+id/adres"
                android:layout_width="267dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Adres" />

            <Button
                android:id="@+id/veranderAdres"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wijzig"
                android:onClick="adresWijzigen"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="com.diegor.bani.BaseActivity">


            <EditText
                android:id="@+id/mail"
                android:layout_width="267dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="e-mail" />

            <Button
                android:id="@+id/veranderMail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wijzig"
                android:onClick="mailWijzigen"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="com.diegor.bani.BaseActivity">


            <EditText
                android:id="@+id/tel"
                android:layout_width="267dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Telefoon nummer" />

            <Button
                android:id="@+id/veranderTel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wijzig"
                android:onClick="telefoonWijzigen"/>

        </LinearLayout>

    </LinearLayout>


</FrameLayout>