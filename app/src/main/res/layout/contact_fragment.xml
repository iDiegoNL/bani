<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".contact.ContactFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="40dp"
        tools:context="com.diegor.bani.BaseActivity">

        <TextView
            android:id="@+id/contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact gegevens"
            android:textSize="35sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="com.diegor.bani.BaseActivity">


            <ImageView
                android:id="@+id/location"
                android:layout_width="82dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:src="@drawable/location" />

            <TextView
                android:id="@+id/locationtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kappalaan 69-3, Kappaville"
                android:textSize="25sp"
                android:layout_marginLeft="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="com.diegor.bani.BaseActivity">


            <ImageView
                android:id="@+id/postcode"
                android:layout_width="62dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:src="@drawable/post" />

            <TextView
                android:id="@+id/postcodetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="6969NL, Noord-Holland"
                android:textSize="25sp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="com.diegor.bani.BaseActivity">


            <ImageView
                android:id="@+id/phone"
                android:layout_width="62dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:src="@drawable/phone" />

            <TextView
                android:id="@+id/phonetxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="666-6969693"
                android:textSize="25sp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            tools:context="com.diegor.bani.BaseActivity">


            <ImageView
                android:id="@+id/email"
                android:layout_width="62dp"
                android:layout_height="65dp"
                android:layout_weight="1"
                android:src="@drawable/email" />

            <TextView
                android:id="@+id/emailtxt"
                android:layout_width="277dp"
                android:layout_height="61dp"
                android:layout_weight="1"
                android:text="mail@bani.nl"
                android:textSize="25sp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>